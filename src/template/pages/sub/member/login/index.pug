extends ../../../../layout/member

block content
    .member__head
        h3 
            span 검은사막 연구소 홈페이지 로그인
        p.member__head-desc 검은사막 연구소 계정으로 로그인 하실 수 있습니다.
    .login
        form(action="")
            .login__title 검은사막 연구소 계정 로그인
            .login__box
                input(type="email", placeholder="Email" required)
                input(type="password", placeholder="Password" required)
                label
                    input(type="checkbox")
                    | 내 계정 기억하기
                button(type="submit") 로그인
                .login__btn-group
                    ul
                        li
                            a(href="") 계정찾기
                        li
                            a(href="") 비밀번호 찾기
                    a(href="" class="join_btn") 회원 가입
